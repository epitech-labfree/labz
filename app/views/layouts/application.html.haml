!!!
%html

  %head
    %title
      = yield(:title) || "Labz Oauth"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application"
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body
    #user_session
      - if current_user
        %p= link_to "Sign out", :destroy_user_session, :method => :delete
      - else
        %p= link_to "Sign in", :new_user_session

    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield
